<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <template id="hms_patient_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="page">

                            <div class="row bg-200">
                                <div class="col-4 text-left">
                                    <span class="align-left text-danger">
                                        <strong>patient Report</strong>
                                    </span>
                                </div>

                            </div>

                            <table class="table borderless" style="height:100px;">
                                <tr class="text-center">
                                    <td class=" mr-2 text-center"> Name: <span t-field="o.fname" />
                                    </td>
                                    <td class=" mr-2 text-center"> Birth Date: <span
                                            t-field="o.birthdate" />
                                    </td>
                                </tr>
                                <tr class="text-center">
                                    <td class="mr-2 text-center"> Age: <span t-field="o.age" />
                                    </td>
                                    <td class=" mr-2 text-center"> Gender: <span t-field="o.email" />
                                    </td>
                                </tr>
                                <tr class="text-center">
                                    <td class=" mr-2 text-center"> Track: <span
                                            t-field="o.depart_name" />
                                    </td>
                                    <td class=" mr-2 text-center"> Student Level: <span
                                            t-field="o.patient_status" />
                                    </td>
                                </tr>

                            </table>
                            <div>
                                <center>
                                    <strong>
                                        history Logs
                                    </strong>
                                </center>

                            </div>

                            <table class="table table-sm table-bordered">
                                <thead style="display: table-row-group">
                                    <tr class="table-primary border border-white">
                                        <th class="text-center border border-white"> User</th>
                                        <th class="text-center border border-white"> Date</th>
                                        <th class="text-center border border-white"> Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="counter" t-value="0" />
                                    <t t-foreach="o.history_logs" t-as="A">
                                        <t t-set="counter" t-value="counter + 1" />
                                        <tr class="border border-white">
                                            <td class="text-center border border-white">
                                                <span t-field="A.create_uid" />
                                            </td>
                                            <td class="text-center border border-white">
                                                <span t-field="A.create_date" />
                                            </td>
                                            <td class="text-center border border-white">
                                                <span t-field="A.description" />
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>


</odoo>